{% extends "FlockMainBundle::layout.html.twig" %}

{% block title %}My flocks{% endblock %}

{% block content %}
    <div id="content">
        <div id="flock-list">
            <div class="title">Flocks you created</div>
            {% for flock in app.user.flocksCreated %}
                <div class="flock-list-item">
                    <strong>{{ flock.name }}</strong>&nbsp;on&nbsp;<strong>{{ flock.startsAt.format('d M, Y H:i A') }}</strong>&nbsp;<a href="{{ path('flock_show', { 'id': flock.id }) }}">Details&nbsp;&raquo;</a>&nbsp;&nbsp;<a href="{{ path('flock_edit', { 'id': flock.id }) }}">[Edit]</a>
                </div>
            {% else %}
                <div class="info">You haven't created any flock yet!</div>
            {% endfor %}

            <div class="title">Flocks you are attending</div>
            {% for attendee in app.user.flocksAttending %}
                <div class="flock-list-item">
                    <strong>{{ attendee.flock.name }}</strong>&nbsp;on&nbsp;<strong>{{ attendee.flock.startsAt.format('d M, Y H:i A') }}</strong>&nbsp;<a href="{{ path('flock_show', { 'id': attendee.flock.id }) }}">Details&nbsp;&raquo;</a>
                </div>
            {% else %}
                <div class="info">You are not attending any flock yet!</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block menu %}
    <li><a href="{{ path('flock_home') }}">Home</a></li>
    <li><a href="{{ path('flocks_list') }}">Flocks</a></li>
    <li><a href="{{ path('flock_about') }}">About</a></li>
{% endblock %}
